@model AAPC.Models.TreinoViewModel

@{ ViewData["Title"] = "Index"; }

<div class="text-center">
    <h3>Detalhes do Treino de Sábado</h3>
    <img class="imglogo" src="~/Images/imbui.jpg"> <br />
    <h4>19:30h | Imbuí</h4>

    <h3>Participantes Inscritos:</h3>
</div>

<div class="text-right">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <!--Pesquisa de dados-->
            <form asp-controller="TreinoTercas" asp-action="Index" method="get">
                <p>

                    <input asp-for="SearchString" class="form-control" placeholder="Busca por Nome:" />
                    <!--<input type="text" asp-for="SearchString" />-->
                    <input type="submit" value="Buscar" class="btn btn-success" />
                </p>
            </form>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Inscreva-se!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LPTSabado[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LPTSabado[0].Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LPTSabado[0].Nascimento)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LPTSabado)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sobrenome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nascimento)
    </td>
    <!--
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td> -->
</tr>}
    </tbody>
</table>
