@model AAPC.Models.TreinoViewModel

@{
    ViewData["Title"] = "Index";
}

    <div class="text-center">
        <h1>Detalhes do Treino de Quinta</h1>
        <hr>
        <h1>20:00h | Imbuí</h1>

        <h3>Participantes Inscritos:</h3>
    </div>

    <div class="text-right">
        <!--Pesquisa de dados-->
        <form asp-controller="TreinoQuintas" asp-action="Index" method="get">
            <p>
                Nome:
                <input type="text" asp-for="SearchString" />
                <input type="submit" value="Buscar" />
            </p>
        </form>
    </div>

    <a asp-action="Create">Inscreva-se</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LPTQuinta[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LPTQuinta[0].Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LPTQuinta[0].Nascimento)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LPTQuinta)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <!--
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>-->
        </tr>
        }
    </tbody>
</table>
